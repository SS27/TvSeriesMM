<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81BEF7"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvEmptyShowList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnAddShow"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:visibility="gone"
        android:text="@string/label_no_shows"/>

    <ListView
        android:id="@+id/lvMyShows"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideInset"/>

    <ImageButton
        android:id="@+id/btnAddShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/custom_btn_add_shows"
        android:clickable="true"
        android:visibility="gone"/>


</RelativeLayout>