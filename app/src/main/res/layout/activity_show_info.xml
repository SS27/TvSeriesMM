<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B070FF"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.spstanchev.tvseries.activities.ShowInfoActivity">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/showInfoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold|italic"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginBottom="@dimen/margin_bottom_5dp"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showInfoRating"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_gravity="center_horizontal"
                android:progressDrawable="@xml/ratingbar_yellow"
                android:isIndicator="true" />

            <ImageView
                android:id="@+id/imageViewLarge"
                android:layout_width="250dp"
                android:layout_height="400dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/showInfoPremiered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="@dimen/margin_bottom_5dp"/>

            <TextView
                android:id="@+id/showInfoStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="@dimen/margin_bottom_5dp"/>

            <TextView
                android:id="@+id/showInfoSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <ImageButton
                android:id="@+id/imageButtonRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_btn_remove_show_purple"
                android:layout_marginBottom="@dimen/margin_bottom_5dp"/>

            <ImageButton
                android:id="@+id/imageButtonEpisodes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_btn_episodes"
                android:layout_marginBottom="@dimen/margin_bottom_5dp"/>

            <ImageButton
                android:id="@+id/imageButtonTvMaze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_btn_tv_maze_purple"
                android:layout_marginBottom="@dimen/margin_bottom_5dp"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
